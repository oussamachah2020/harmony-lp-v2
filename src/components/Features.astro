---
import {
	Briefcase,
	CheckSquare,
	Banknote,
	CalendarDays,
	Users,
	BarChart3,
	Video,
	MessageSquare
} from '@lucide/astro';

type Feature = {
	name: string;
	description: string;
	icon: any;
	color: string;
};

const features: Feature[] = [
	{
		name: 'Project Management',
		description: 'Create, assign, and track projects with ease. Set milestones, deadlines, and monitor progress in real-time.',
		icon: Briefcase,
		color: 'bg-gradient-to-br from-blue-500 to-blue-600'
	},
	{
		name: 'Task Tracking',
		description: 'Break down projects into manageable tasks. Assign responsibilities, set priorities, and track completion.',
		icon: CheckSquare,
		color: 'bg-gradient-to-br from-green-500 to-green-600'
	},
	{
		name: 'Payroll Management',
		description: 'Streamline your payroll process. Automatically calculate salaries, taxes, and generate pay slips.',
		icon: Banknote,
		color: 'bg-gradient-to-br from-purple-500 to-purple-600'
	},
	{
		name: 'Scheduling',
		description: 'Plan and organize team schedules. Manage shifts, time-off requests, and avoid scheduling conflicts.',
		icon: CalendarDays,
		color: 'bg-gradient-to-br from-amber-500 to-amber-600'
	},
	{
		name: 'Team Collaboration',
		description: 'Foster teamwork with built-in communication tools. Share files, feedback, and updates in one place.',
		icon: Users,
		color: 'bg-gradient-to-br from-indigo-500 to-indigo-600'
	},
	{
		name: 'Reporting & Analytics',
		description: 'Make data-driven decisions with comprehensive reports and analytics on all aspects of your business.',
		icon: BarChart3,
		color: 'bg-gradient-to-br from-cyan-500 to-cyan-600'
	},
	{
		name: 'Video & Audio Calls',
		description: 'Connect with your team through high-quality video and audio calls. Host virtual meetings, presentations, and training sessions.',
		icon: Video,
		color: 'bg-gradient-to-br from-rose-500 to-rose-600'
	},
	{
		name: 'Instant Messaging',
		description: 'Communicate in real-time with individual and group chats. Share files, links, and collaborate efficiently with your team.',
		icon: MessageSquare,
		color: 'bg-gradient-to-br from-emerald-500 to-emerald-600'
	}
];
---

<section id="features" class="py-20 relative overflow-hidden">
	<!-- Backgrounds -->
	<div class="absolute inset-0 -z-10">
		<div class="absolute inset-0 bg-gray-50"></div>
		<div class="absolute top-0 h-40 w-full bg-gradient-to-b from-white to-transparent"></div>
		<div class="absolute bottom-0 h-40 w-full bg-gradient-to-t from-white to-transparent"></div>
		<div class="absolute top-20 left-10 w-64 h-64 bg-primary opacity-5 rounded-full"></div>
		<div class="absolute bottom-20 right-10 w-80 h-80 bg-primary opacity-5 rounded-full"></div>
		<div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(#000 1px, transparent 1px); background-size: 20px 20px;"></div>
	</div>

	<div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 relative">
		<div class="text-center">
			<span class="inline-flex mb-3 items-center px-4 py-1 rounded-full text-sm font-medium bg-[#4250D8]/10 text-[#4250D8] animate-fade-in">
				<svg class="mr-1.5 h-2 w-2 text-primary" fill="currentColor" viewBox="0 0 8 8">
					<circle cx="4" cy="4" r="3" />
				</svg>
				Features
			</span>
			<h2 class="text-3xl sm:text-4xl font-extrabold text-gray-900 tracking-tight animate-fade-in animation-delay-300">
				Everything you need to run your business
			</h2>
			<p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500 animate-fade-in animation-delay-500">
				Harmony combines all essential business tools into one seamless platform.
			</p>
		</div>

		<!-- Features Grid -->
		<div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-8 lg:mx-20">
			{features.map(({ name, description, icon: Icon, color }, index) => (
				<div
					class="bg-white rounded-xl px-6 py-8 shadow-lg hover:shadow-xl border border-gray-100 hover:border-primary/20 transition-all duration-300 hover:-translate-y-1 animate-fade-in-up"
					style={`--animation-delay: ${index * 100 + 700}ms`}
				>
					<div class={`inline-flex items-center justify-center p-3 ${color} rounded-xl shadow-lg icon-wrapper`}>
						<Icon class="h-6 w-6 text-white" />
					</div>
					<h3 class="mt-5 text-lg font-semibold text-gray-900 tracking-tight">{name}</h3>
					<p class="mt-3 text-base text-gray-500">{description}</p>
					<div class="mt-4 flex items-center text-primary hover:text-primary-dark transition-colors">
						<span class="text-sm font-medium">Learn more</span>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 arrow-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</div>
				</div>
			))}
		</div>

		<!-- CTA -->
		<div class="mt-16 text-center animate-fade-in animation-delay-1500">
			<a href="#" class="inline-flex items-center px-6 py-3 rounded-md text-base font-medium text-white bg-[#4250D8] hover:bg-[#3340b4] transition-colors shadow-sm">
				Explore all features
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
				</svg>
			</a>
		</div>
	</div>
</section>

<style>
	@keyframes fadeIn {
		from { opacity: 0; }
		to { opacity: 1; }
	}

	@keyframes fadeInUp {
		from { opacity: 0; transform: translateY(20px); }
		to { opacity: 1; transform: translateY(0); }
	}

	.animate-fade-in {
		opacity: 0;
		animation: fadeIn 0.6s ease-out forwards;
	}

	.animate-fade-in-up {
		opacity: 0;
		animation: fadeInUp 0.6s ease-out forwards;
		animation-delay: var(--animation-delay, 0ms);
	}

	.animation-delay-300 { animation-delay: 300ms; }
	.animation-delay-500 { animation-delay: 500ms; }
	.animation-delay-1500 { animation-delay: 1500ms; }

	.icon-wrapper {
		transition: transform 0.3s ease;
	}
	.icon-wrapper:hover {
		transform: scale(1.1);
	}
	.arrow-icon {
		transition: transform 0.2s ease;
	}
	.feature-card:hover .arrow-icon {
		transform: translateX(4px);
	}
</style>
