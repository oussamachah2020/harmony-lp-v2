---
const plans = [
  {
    name: "Starter",
    price: "$29",
    description: "Perfect for small teams and projects",
    features: [
      "Up to 5 team members",
      "10 content types",
      "50,000 API requests/month",
      "5GB media storage",
      "Basic support",
      "Community access",
    ],
    cta: "Start free trial",
    popular: false,
  },
  {
    name: "Professional",
    price: "$79",
    description: "Ideal for growing teams and businesses",
    features: [
      "Up to 15 team members",
      "Unlimited content types",
      "500,000 API requests/month",
      "25GB media storage",
      "Priority support",
      "Custom workflows",
      "Localization",
      "Advanced permissions",
    ],
    cta: "Start free trial",
    popular: true,
  },
  {
    name: "Enterprise",
    price: "Custom",
    description: "For large organizations with complex needs",
    features: [
      "Unlimited team members",
      "Unlimited content types",
      "Custom API request limits",
      "Custom media storage",
      "Dedicated support",
      "Custom workflows",
      "Advanced localization",
      "SSO authentication",
      "SLA guarantees",
      "Dedicated environment",
    ],
    cta: "Contact sales",
    popular: false,
  },
]
---

<section id="pricing" class="py-20 relative overflow-hidden">
  <!-- Blurred overlay -->
  <div class="absolute inset-0 backdrop-blur-md bg-white/50 z-10 flex flex-col items-center justify-center">
    <div class="bg-white/80 p-8 rounded-xl shadow-lg max-w-md text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">Pricing Coming Soon</h3>
      <p class="text-gray-600 mb-6">Our pricing plans are currently being finalized. Join our waitlist to be the first to know when they're available.</p>
      <a href="#waitlist" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-black hover:bg-primary-dark transition-colors">
        Join the waitlist
      </a>
    </div>
  </div>

  <!-- Background elements -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gray-50"></div>
    <div class="absolute top-0 left-0 right-0 h-40 bg-gradient-to-b from-white to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-white to-transparent"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="text-center">
      <div class="inline-block">
        <span class="inline-flex items-center px-4 py-1 rounded-full text-sm font-medium bg-primary/10 text-primary">
          <svg class="mr-1.5 h-2 w-2 text-primary" fill="currentColor" viewBox="0 0 8 8">
            <circle cx="4" cy="4" r="3" />
          </svg>
          Pricing
        </span>
      </div>
      <h2 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        Simple, transparent pricing
      </h2>
      <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
        Choose the plan that's right for your business. All plans include a 14-day free trial.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 gap-y-8 sm:grid-cols-2 sm:gap-6 lg:grid-cols-3 lg:gap-8">
      {plans.map((plan) => (
        <div class={`rounded-2xl shadow-lg overflow-hidden ${plan.popular ? 'ring-2 ring-primary' : 'ring-1 ring-gray-200'} bg-white`}>
          {plan.popular && (
            <div class="bg-primary py-1 text-center text-sm font-medium text-white">
              Most Popular
            </div>
          )}
          <div class="p-6 sm:p-8">
            <h3 class="text-lg font-semibold text-gray-900">{plan.name}</h3>
            <div class="mt-4 flex items-baseline">
              <span class="text-4xl font-extrabold text-gray-900">{plan.price}</span>
              {plan.price !== "Custom" && <span class="ml-1 text-xl font-medium text-gray-500">/month</span>}
            </div>
            <p class="mt-2 text-sm text-gray-500">{plan.description}</p>
            
            <ul class="mt-6 space-y-4">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg class="h-5 w-5 text-primary flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="ml-3 text-sm text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
            
            <div class="mt-8">
              <a href="#" class={`block w-full py-3 px-4 rounded-md shadow text-center text-sm font-medium ${plan.popular ? 'bg-primary text-white hover:bg-primary-dark' : 'bg-white text-primary border border-primary hover:bg-gray-50'} transition-colors`}>
                {plan.cta}
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <p class="text-gray-500">
        All prices are in USD. Need something different? <a href="#" class="text-primary hover:text-primary-dark font-medium">Contact us</a> for custom pricing.
      </p>
    </div>
  </div>
</section>
